<h1> <%= @game.name %> Page </h1>
<h4><%= @game.category %></h4>

<h3><%= @game.description %></h3>

<br>

<h3>All the matches</h3>

<% @game.matches.each do |match| %>
  <ul>
    <li><%= link_to match.match_datetime, match_path(match)%></li>
  </ul>
<% end %>
<br>
<%= link_to "Edit Game", edit_game_path(@game) %>
<br>
