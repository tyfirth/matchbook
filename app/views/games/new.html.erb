<h1>New Game</h1>

<%= form_for @game do |f| %>

  <%= f.label :name%>
  <%= f.text_field :name %><br>

  <%= f.label :category %>
  <%= f.text_field :category %><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br>
<br>
<br>
  <h3><%=f.label "Create Match" %></h3>
  <br>
  <%= f.fields_for :match do |m| %>
    <%= m.label "Played on:" %>
    <%= m.datetime_field :match_datetime %><br>

    <%= m.label "Players:" %>
    <%= m.collection_check_boxes :player_names, Player.all, :name, :name %><br>

    <%= m.label "Winner:" %>
    <%= m.collection_radio_buttons :winner, Player.all, :name, :name %><br>

    <%= m.label "Score:" %>
    <%= m.text_field :score %><br>

    <%= m.label "Notes:" %>
    <%= m.text_area :notes %><br>

  <% end %>
  <br>
  <%= f.submit %>
<% end %>
<br>
